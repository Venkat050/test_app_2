<% if @article.errors.any?  %>
<ul>
    <% @article.errors.full_messages.each do |error| %>
        <li><%= error %></li>
    <% end %>
</ul>
<% end %>
<%= form_with(model: @article, local: true) do |f| %>
 <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
</p>

<p>
    <%= f.label :description %>
    <%= f.text_area :description %>
</p>
    <%= f.submit %>
<p>
<% end %>